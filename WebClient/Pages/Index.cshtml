@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebClient.ViewModel.GradesViewModel

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>


@if (@Model == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div id="newGradeContainer">
        <div>
            <h2>Input New Grade</h2>
            <hr/>
        </div>
        @using (Html.BeginForm())
        {
            <form method="post" id="gradeInputsContainer">
                <fieldset>
                    <div>
                        <label>Name</label>
                        <input id="gradeName" name="Name"/>
                    </div>
                    <div>
                        <label>Subject</label>
                        <input id="gradeSubject" name="Subject"/>
                    </div>
                    <div>
                        <label>Value</label>
                        <input id="gradeValue" name="GradeAmount"/>
                    </div>
                    <input id="newGradeSubmitButton" type="submit" value="Submit" asp-page-handler="Submit"/>
                </fieldset>
            </form>
        }

        <hr/>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var grade in @Model)
        {
            <tr>
                <td>@grade.Id)</td>
                <td>@grade.Name</td>
                <td>@grade.Subject</td>
                <td>@grade.GradeAmount</td>
            </tr>
        }
        </tbody>
    </table>
}